<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.MainActivity"

    android:background="@drawable/fotohotelinicio"
   >

    <fragment
        android:id="@+id/fragTodoLogo"
        android:name="com.svalero.clara.bookingexamen.Fragments.MenuDosFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        >
    </fragment>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_login_usuario"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@id/fragTodoLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/login_hint_usuario"
        android:layout_marginTop="80dp"
        app:endIconMode="clear_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtLoginUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="15dp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_login_pass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_login_usuario"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle"
        android:hint="@string/login_hint_pass"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtLoginPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_login_usuario"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="15dp"
            />
    </com.google.android.material.textfield.TextInputLayout>



